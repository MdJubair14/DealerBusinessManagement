<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jubair.dealerbusinessmanagement.ClientActivity">


    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Client:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/add_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Client Name"
        android:layout_below="@+id/add"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Client:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/add_client"
        android:layout_marginTop="15dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/remove_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Client Name"
        android:layout_below="@+id/remove"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Client's data:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/remove_client"
        android:layout_marginTop="15dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/up_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Client Name for update"
        android:layout_below="@+id/update"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="update"
        android:layout_below="@id/up_client"
        android:layout_alignParentRight="true"
        android:onClick="singleClient"/>


    <TextView
        android:id="@+id/all_clients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Clients:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/btn_update"
        android:layout_marginTop="25dp"
        android:padding="10dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="show"
        android:layout_below="@id/all_clients"
        android:layout_alignParentRight="true"
        android:onClick="AllClient"/>


</RelativeLayout>
