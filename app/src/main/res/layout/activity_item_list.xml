<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jubair.dealerbusinessmanagement.ItemListActivity">


    <TextView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/item"/>

    <Button
        android:id="@+id/btn_add_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@id/add"
        android:layout_alignParentRight="true"
        android:onClick="singleItem"/>


    <TextView
        android:id="@+id/update_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update or Remove Item:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_add_item"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_update_remove_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Update / Remove"
        android:layout_below="@id/update_remove"
        android:layout_alignParentRight="true"
        android:onClick="singleItem"/>

    <TextView
        android:id="@+id/all_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Items:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/btn_update_remove_item"
        android:padding="10dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_below="@id/all_item"
        android:layout_alignParentRight="true"
        android:onClick="allItem"/>

</RelativeLayout>
