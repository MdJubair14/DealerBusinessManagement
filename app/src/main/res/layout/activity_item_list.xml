<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jubair.dealerbusinessmanagement.ItemListActivity">


    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_add_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@id/add"
        android:layout_alignParentRight="true"
        android:onClick="singleItem"/>

    <TextView
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Item:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_add_item"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/remove_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Give a Item Name"
        android:layout_below="@+id/remove"/>

    <Button
        android:id="@+id/btn_remove_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:layout_below="@id/remove_item"
        android:layout_alignParentRight="true"
        android:onClick="removeItem"/>

    <TextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Item:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_remove_item"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/previous_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Give changing Item Name"
        android:layout_below="@+id/update" />

    <Button
        android:id="@+id/btn_update_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/previous_item_name"
        android:layout_alignParentRight="true"
        android:onClick="singleItem"/>

    <TextView
        android:id="@+id/all_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Items:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/btn_update_item"
        android:padding="10dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_below="@id/all_item"
        android:layout_alignParentRight="true"
        android:onClick="allItem"/>

</RelativeLayout>
