<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jubair.dealerbusinessmanagement.CompanyActivity">

    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Company Information:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_add_company"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@id/add"
        android:layout_alignParentRight="true"
        android:onClick="singleCompany"/>

    <TextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Company:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_add_company"
        android:padding="10dp"/>


    <Button
        android:id="@+id/btn_update_company"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/update"
        android:layout_alignParentRight="true"
        android:onClick="updateCompany"/>

    <TextView
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Company:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_update_company"
        android:padding="10dp"/>


    <Button
        android:id="@+id/btn_select_company"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_below="@id/select"
        android:layout_alignParentRight="true"
        android:onClick="selectCompany"/>


    <TextView
        android:id="@+id/all_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Company Information:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_select_company"
        android:padding="10dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_below="@id/all_company"
        android:layout_alignParentRight="true"
        android:onClick="showCompany"
        android:id="@+id/button" />


</RelativeLayout>
