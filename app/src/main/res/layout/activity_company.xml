<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jubair.dealerbusinessmanagement.CompanyActivity">

    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Company:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/add_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:hint="Give a company name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Company:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/add_company"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/remove_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remove"
        android:hint="Give a company name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Company:"
        android:hint="Give a company name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/remove_company"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/update_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update"
        android:hint="Give a company name"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/current_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Company:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/update_company"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>


</RelativeLayout>
